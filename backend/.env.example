# Server Configuration
PORT=3000
NODE_ENV=development

# Database
MONGO_URI=mongodb+srv://your_username:your_password@cluster.mongodb.net/database_name

# JWT Secret (minimum 32 characters for security)
JWT_SECRET=your_very_long_secret_key_here_at_least_32_characters

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:5173

# Admin Access
DEFAULT_ADMIN_PASSCODE=123456

# Email Service (Resend.com API)
RESEND_API_KEY=re_your_resend_api_key_here
FROM_EMAIL=Your Business <noreply@yourdomain.com>

# Image Upload Service (ImageKit.io)
IMAGEKIT_PUBLIC_KEY=public_your_public_key_here
IMAGEKIT_PRIVATE_KEY=private_your_private_key_here
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_endpoint
